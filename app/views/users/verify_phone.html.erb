<% provide(:title, "Edit Account") %>

<p id="notice"><%= notice %></p>

<%= render 'users/side_menu' %>
<div class="user-content">
	<div class="user-title">
		<h1>Verify Your Phone</h1>
	</div>
	<div class="account-form">
		<%= form_for(@user, :url => { :action => :update_phone_verification, :id => @user.id }, :html => { :class => "", :method => :put }) do |f| %>
			<% if @user.errors.any? %>
			    <div id="error_explanation">
			    	<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

			    	<ul>
			    	<% @user.errors.full_messages.each do |msg| %>
			        	<li><%= msg %></li>
			    	<% end %>
			    	</ul>
			    </div>
			<% end %>
			<%= f.text_field :phone_verification_code, :required => true, :placeholder => "Code From Text" %>
			<div class="actions">
			    <%= submit_tag "Verify", :class => "save-button" %>
			</div>
		<% end %>
	</div>
</div>