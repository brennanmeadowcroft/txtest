<div class="course-content">
	<p id="notice"><%= notice %></p>

	<h1><%= @course.description %></h1>
	<%= render 'settings/display_settings', :settings => @course.settings %>

	<h4>Questions</h4>
	<div class="questions">
		<ul>
		<% @course.questions.each do |question| %>
			<li><%= link_to question.question, question %></li>
		<% end %>
		</ul>
	</div>
	<%= link_to 'Edit Course', edit_course_path(@course) %> | 
	<%= link_to 'Edit Settings', edit_setting_path(@course.settings) %> | 
	<%= link_to "New Question", new_question_path %>
</div>