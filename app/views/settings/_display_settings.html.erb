<div class="questions-heading">
  <h4>Settings</h4>
  <%= link_to 'Edit...', edit_setting_path, :class=>"new-button right" %>
</div>

<div class="settings-info">
	<table>
		<tr>
			<th>Texts Per Day</th>
			<th>Start Time</th>
			<th>End Time</th>
			<th>Response Time</th>
		<tr>
		<tr>
			<td><%= settings.texts_per_day %></td>
			<td><%= settings.start_time %>:00</td>
			<td><%= settings.end_time %>:00</td>
			<td><%= settings.response_time %> minutes</td>
		</tr>
	</table>
</div>
